<%- include('header') %>

<div class="ui grid">
  <div class="four wide column">
    <a class="avatar"
       href="/articles?author=<%= user._id %>">
      <img class="avatar" src="/images/<%= user.avatar %>" style="width: 50px;
      height: 50px;
      display: flex;
      border-radius: 50%;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      float: right;">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" method="post" action="/articles/<%= article._id %>/edit" enctype="multipart/form-data">
      <div class="field required">
        <label>标题</label>
        <input type="text" name="title" value="<%= article.title %>">
      </div>
      <div class="field required">
        <label>内容</label>
        <textarea name="content" rows="15"><%= article.content %></textarea>
      </div>
      <input type="submit" class="ui button" value="发布">
    </form>
  </div>
</div>

<%- include('footer') %>